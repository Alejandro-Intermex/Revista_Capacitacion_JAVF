@model IEnumerable<Revista_Capacitacion.REVISTAS>

<p>
    <br />
    <button class="btn btn-primary" onclick="Create()">Crear</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_REV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TITULO_REV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FECHA_CIRCULACION)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_CAT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ROW_CREATE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PRECIO)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID_REV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TITULO_REV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FECHA_CIRCULACION)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID_CAT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ROW_CREATE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRECIO)
        </td>
        <td>
            <button class="btn btn-primary" onclick="mostrareditar(@item.ID_REV)">Editar</button> |
            <button class="btn btn-primary" onclick="mostrareliminar()">Eliminar</button>
        </td>
    </tr>
}
</table>    

@section Scripts
    {
    <script>
        function Create(id = 0) {
            let titulo = "Agregar";
            if (id > 0) {
                titulo = "Editar";
            }
            let HTML =
                `
                    <input type="email" class="form-control" id="TITULO_REV" aria-describedby="emailHelp">
                    <input type="email" class="form-control" id="CB" aria-describedby="emailHelp">
                    <input type="email" class="form-control" id="FECHA_CIRCULACION" aria-describedby="emailHelp">
                    <input type="email" class="form-control" id="ID_CAT" aria-describedby="emailHelp">
                    <input type="email" class="form-control" id="PRECIO" aria-describedby="emailHelp">
                    <button id="Aceptar" class="btn">Aceptar</button>
                `;
            Swal.fire({
                title: titulo,
                icon: 'info',
                html: HTML,
                showCloseButton: true,
                showCancelButton: false,
                showConfirmButton: false,
                focusConfirm: false,
                didRender: () => {
                    document.querySelector("#Aceptar").addEventListener("click", () => {

                            let TITULO_REV = $("#TITULO_REV").val();
                            let CB = $("#CB").val();
                            let FECHA_CIRCULACION = $("#FECHA_CIRCULACION").val();
                            let ID_CAT = $("#ID_CAT").val();
                            let PRECIO = $("#PRECIO").val();

                        console.log("Result:", TITULO_REV, CB, FECHA_CIRCULACION, ID_CAT, PRECIO);
                        var data = {
                            TITULO_REV: TITULO_REV,
                            CB: CB,
                            FECHA_CIRCULACION: FECHA_CIRCULACION,
                            ID_CAT: ID_CAT,
                            PRECIO: PRECIO
                        }
                        var url =  "@Url.Action("Create2", "Home")";

                        console.log(data)

                        $.post(url, data).done(function (e) {
                            console.log(e);
                            Swal.fire({
                                icon: 'success',
                                title: 'Revista guardada con éxito!',
                                showConfirmButton: false,
                                timer: 1500
                            })
                        })

                    });
                }
            })
        }

        function mostrareditar(Id = 0)
        {
            let titulo = "123"
            if (Id > 0) {
                titulo = "Editar";
            }
            let HTML =
                `
                    
                    <input type="email" class="form-control" id="TITULO_REV" aria-describedby="emailHelp">
                    <input type="email" class="form-control" id="CB" aria-describedby="emailHelp">
                    <input type="email" class="form-control" id="FECHA_CIRCULACION" aria-describedby="emailHelp">
                    <input type="email" class="form-control" id="ID_CAT" aria-describedby="emailHelp">
                    <input type="email" class="form-control" id="PRECIO" aria-describedby="emailHelp">
                    <button id="Aceptar" class="btn">Aceptar</button>
                `;
            Swal.fire({
                title: titulo,
                icon: 'info',
                html: HTML,
                showCloseButton: true,
                showCancelButton: false,
                showConfirmButton: false,
                focusConfirm: false,
                didRender: () => {

                    var url = "@Url.Action("Edit", "Home")";
                    console.log(Id);
                    $.get(url, {Id : Id}).done((data) => {
                        console.log(data.TITULO_REV);
                        console.log(data.CB);
                        console.log(data.FECHA_CIRCULACION);
                        console.log(data.ID_CAT);
                        console.log(data.PRECIO);
                                                                                        
                        
                        $("#TITULO_REV").val(data.TITULO_REV);
                        $("#CB").val(data.CB);
                        $("#FECHA_CIRCULACION").val(data.FECHA_CIRCULACION);
                        $("#ID_CAT").val(data.ID_CAT);
                        $("#PRECIO").val(data.PRECIO);
                    }).fail((data) => {
                        console.log(data.TITULO_REV);
                    });

                    console.log("despues");

                    document.querySelector("#Aceptar").addEventListener("click", () => {

                            let ID_REV = $("#ID_REV").val();
                            let TITULO_REV = $("#TITULO_REV").val();
                            let CB = $("#CB").val();
                            let FECHA_CIRCULACION = $("#FECHA_CIRCULACION").val();
                            let ID_CAT = $("#ID_CAT").val();
                            let PRECIO = $("#PRECIO").val();

                        console.log("Result:", ID_REV,TITULO_REV, CB, FECHA_CIRCULACION, ID_CAT, PRECIO);
                        var data = {
                            ID_REV: ID_REV,
                            TITULO_REV: TITULO_REV,
                            CB: CB,
                            FECHA_CIRCULACION: FECHA_CIRCULACION,
                            ID_CAT: ID_CAT,
                            PRECIO: PRECIO
                        }
                        var url =  "@Url.Action("Edit2", "Home")";

                        console.log(data)

                        $.post(url, data).done(function (e) {
                            console.log(e);
                            Swal.fire({
                                icon: 'success',
                                title: 'Revista guardada con éxito!',
                                showConfirmButton: false,
                                timer: 1500
                            })
                        })

                    });
                    
                }
            })
        }

        function mostrareliminar() {
            const swalWithBootstrapButtons = Swal.mixin({
                customClass: {
                    confirmButton: 'btn btn-success',
                    cancelButton: 'btn btn-danger'
                },
                buttonsStyling: false
            })

            swalWithBootstrapButtons.fire({
                title: 'Estas seguro ?',
                text: "No podras revertir esto!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Si, borra esto!',
                cancelButtonText: 'No, Cancelalo!',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    swalWithBootstrapButtons.fire(
                        'Borrado!',
                        'Tu archivo a sido borrado',
                        'Listo'
                    )
                } else if (
                    /* Read more about handling dismissals below */
                    result.dismiss === Swal.DismissReason.cancel
                ) {
                    swalWithBootstrapButtons.fire(
                        'Cancelado',
                        'Salvaste a este registro:)',
                        'error'
                    )
                }
            })
        }
    </script>
    }
