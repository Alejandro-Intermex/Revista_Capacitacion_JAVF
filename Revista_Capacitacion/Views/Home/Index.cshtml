                        },
                        inputAttr: {
                            id: "ID_CAT"
                        },
                    });
                    //NUMBERBOX para el precio
                    $('#simple').dxNumberBox({
                        inputAttr: {
                           
                            id: "PRECIO"

                        },
                    });


                   

                    document.querySelector("#Aceptar").addEventListener("click", () => {

                        let TITULO_REV = $("#TITULO_REV").val();
                        let CB = $("#CB").val();
                        let FECHA_CIRCULACION = $("#FECHA_CIRCULACION").val();
                        //let ID_CAT = $("#ID_CAT").val("");
                        let PRECIO = $("#PRECIO").val();
                        let ID_CAT = $("#lookup").dxLookup("instance").option('value');

                        console.log("Result:", TITULO_REV, CB, FECHA_CIRCULACION, ID_CAT, PRECIO);
                        var data = {
                            TITULO_REV: TITULO_REV,
                            CB: CB,
                            FECHA_CIRCULACION: FECHA_CIRCULACION,
                            ID_CAT: ID_CAT,
                            PRECIO: PRECIO
                        }
                        var url =  "@Url.Action("Create2", "Home")";

                        console.log(data)

                        $.post(url, data).done(function (e) {
                            console.log(e);
                            Swal.fire({
                                icon: 'success',
                                title: 'Revista guardada con éxito!',
                                showConfirmButton: false,
                                timer: 1500
                            })


                        })

                    });
                }
            })
        }

