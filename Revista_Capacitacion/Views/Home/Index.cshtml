                    <div id="default"></div>
                    <label class"form-control">CATEGORIA ID</label><br/>
                    <div id="lookup"></div><br/>
                    <label class"form-control">PRECIO</label>
                    <div id="simple"></div>
                    <button id="Aceptar" class="btn">Aceptar</button>
                `;
            Swal.fire({
                title: titulo,
                icon: 'info',
                html: HTML,
                showCloseButton: true,
                showCancelButton: false,
                showConfirmButton: false,
                focusConfirm: false,
                didRender: () => {
                    //texbox para el titulo de la revista
                    $('#placeholder').dxTextBox({
                        placeholder: 'Ingresa Titulo de Revista',
                        label: "Titulo",
                        labelMode: "floating",
                        inputAttr: {
                            id: "TITULO_REV"
                        },
                    }).dxValidator({
                        validationRules: [{
                            type: 'required',
                            message: 'Se requiere titulo',
